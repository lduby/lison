<h1><%= @item.title %></h1>
<p id=item_authors><strong>Authors: </strong>
  <ul>
  <% @item.authors.each do |author| %>
  <li><%= link_to author.name, author_path(author), id: "show_author_#{author.id}" %></li>
  <% end %>
  </ul>
</p>
<p id=item_illustrators><strong>Illustrators: </strong>
  <ul>
  <% @item.illustrators.each do |illustrator| %>
  <li><%= link_to illustrator.name, illustrator_path(illustrator), id: "show_illustrator_#{illustrator.id}" %></li>
  <% end %>
  </ul>
</p>
<p id=item_publisher><strong>Publisher: </strong>
  <% if @item.publisher %>
    <%=link_to @item.publisher.name, publisher_path(@item.publisher), id: "show_publisher_#{@item.publisher.id}" %>
  <% end %>
</p>
<p id=item_collection><strong>Collection: </strong>
  <% if @item.collection %>
    <%=link_to @item.collection.name, collection_path(@item.collection), id: "show_collection_#{@item.collection.id}" %>
  <% end %>
</p>
<p id=item_themes><strong>Themes: </strong><%= link_to 'New', new_theme_path(), id: "new_theme" if can? :create, Theme %>
  <ul>
  <% @item.themes.each do |theme| %>
  <li><%= link_to theme.name, theme_path(theme), id: "show_theme_#{theme.id}" %></li>
  <% end %>
  </ul>
</p>
<%= link_to 'Back', items_path %> | <%= link_to 'Edit', edit_item_path(@item) %>
