<% if !@author.nil? %>
  <h1><%= @author.name %>''s items</h1>
<% elsif !@illustrator.nil? %>
  <h1><%= @illustrator.name %>''s items</h1>
<% elsif !@publisher.nil? %>
  <h1><%= @publisher.name %> items</h1>
<% elsif !@collection.nil? %>
  <h1><%= @collection.name %> items</h1>
<% elsif !@theme.nil? %>
  <h1><%= @theme.name %>''s items</h1>
<% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @items.each do |item| %>
    <tr name="item_<%= item.id %>">
      <td><%= item.title %></td>
      <td></td>
      <td><%= link_to 'Show', item_path(item), id: "show_item_#{item.id}" %></td>
      <td><%= link_to 'Edit', edit_item_path(item), id: "edit_item_#{item.id}" %></td>
      <td><%= link_to 'Destroy', item_path(item), id: "del_item_#{item.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to 'New item', new_item_path %></p>
